<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTakeOrderDeviceNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DEVICE NUMBER"
            android:textSize="12dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:fontFamily="@font/sfuitextregular"
            android:layout_weight=".33"/>

        <TextView
            android:layout_below="@id/txtTakeOrderDeviceNumber"
            android:id="@+id/txtTakeOrderControlNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONTROL NUMBER"
            android:textSize="12dp"
            android:padding="10dp"
            android:textAlignment="center"
            android:fontFamily="@font/sfuitextregular"
            android:layout_weight=".33"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>