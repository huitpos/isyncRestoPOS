<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">


                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".9"
                    android:layout_marginLeft="9dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        >

<!--                        Default-->
<!--                        <com.google.android.material.button.MaterialButton-->
<!--                            android:layout_width="50dp"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginHorizontal="10dp"-->
<!--                            app:iconGravity="textStart"-->
<!--                            app:iconPadding="0dp"-->
<!--                            app:cornerRadius="5dp"-->
<!--                            app:icon="@drawable/baseline_account_balance_wallet_24"/>-->

                        <!--Profile-->
<!--                        <com.google.android.material.button.MaterialButton-->
<!--                            android:id="@+id/btnNavProfile"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginLeft="10dp"-->
<!--                            android:layout_marginRight="10dp"-->
<!--                            android:fontFamily="@font/sfprotextbold"-->
<!--                            android:textSize="12dp"-->
<!--                            android:text="Profile"-->
<!--                            app:cornerRadius="5dp"-->
<!--                            app:backgroundTint="@color/acolor"-->
<!--                            app:icon="@drawable/baseline_person_outline_24"/>-->

                        <!--Resume Transaction-->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNavResumeTransaction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/sfprotextbold"
                            android:textSize="14dp"
                            android:text="Resume Transaction"
                            app:cornerRadius="5dp"
                            app:backgroundTint="@color/acolor"
                            app:icon="@drawable/baseline_assignment_24"/>

                        <!--Orders-->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNavOrders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/sfprotextbold"
                            android:textSize="14dp"
                            android:text="Orders"
                            app:cornerRadius="5dp"
                            app:backgroundTint="@color/acolor"
                            app:icon="@drawable/baseline_shopping_cart_24"/>

                        <!--View Receipt-->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNavViewReceipt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/sfprotextbold"
                            android:textSize="14dp"
                            android:text="View Receipt"
                            app:cornerRadius="5dp"
                            app:backgroundTint="@color/acolor"
                            app:icon="@drawable/baseline_receipt_24"/>

                        <!--Account Receivable Redeeming-->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNavARRedeeming"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/sfprotextbold"
                            android:textSize="14dp"
                            android:text="AR Redeeming"
                            app:cornerRadius="5dp"
                            app:backgroundTint="@color/acolor"
                            app:icon="@drawable/baseline_recent_actors_24"/>

                        <!--Cutoff-->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNavCutoff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/sfprotextbold"
                            android:textSize="14dp"
                            android:text="Cutoff"
                            app:cornerRadius="5dp"
                            app:backgroundTint="@color/acolor"
                            app:icon="@drawable/baseline_book_24"/>

                        <!--Payout-->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNavPayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/sfprotextbold"
                            android:textSize="14dp"
                            android:text="Payout"
                            app:cornerRadius="5dp"
                            app:backgroundTint="@color/acolor"
                            app:icon="@drawable/baseline_account_balance_wallet_24"/>

                        <!--Safekeeping-->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNavCashFund"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/sfprotextbold"
                            android:textSize="14dp"
                            app:cornerRadius="5dp"
                            android:text="Cash Fund"
                            app:backgroundTint="@color/acolor"
                            app:icon="@drawable/baseline_money_24"/>

                        <!--Safekeeping-->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNavSafekeeping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/sfprotextbold"
                            android:textSize="14dp"
                            app:cornerRadius="5dp"
                            android:text="Safekeeping"
                            app:backgroundTint="@color/acolor"
                            app:icon="@drawable/baseline_point_of_sale_24"/>

                        <!--Spot Audit-->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNavSpotAudit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/sfprotextbold"
                            android:textSize="14dp"
                            android:text="Spot Audit"
                            app:cornerRadius="5dp"
                            app:backgroundTint="@color/acolor"
                            app:icon="@drawable/baseline_font_download_24"/>

                        <!--Sync Data From Server-->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNavSync"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/sfprotextbold"
                            android:textSize="14dp"
                            android:text="Sync Data"
                            app:cornerRadius="5dp"
                            app:backgroundTint="@color/acolor"
                            app:icon="@drawable/baseline_sync_24"/>

                        <!--Upload Data To Server-->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNavUpload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/sfprotextbold"
                            android:textSize="14dp"
                            android:text="Upload Server"
                            app:cornerRadius="5dp"
                            app:backgroundTint="@color/acolor"
                            app:icon="@drawable/baseline_cloud_upload_24"/>

                        <!--Backup Database-->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNavBackup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/sfprotextbold"
                            android:textSize="14dp"
                            android:text="Backup"
                            app:cornerRadius="5dp"
                            app:backgroundTint="@color/acolor"
                            app:icon="@drawable/baseline_cloud_download_24"/>

                        <!--Settings-->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNavSettings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/sfprotextbold"
                            android:textSize="14dp"
                            android:text="Settings"
                            app:cornerRadius="5dp"
                            app:backgroundTint="@color/acolor"
                            app:icon="@drawable/baseline_settings_24"/>


                    </LinearLayout>

                </HorizontalScrollView>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight=".1">

                    <!--Logout-->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnNavLogout"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:cornerRadius="5dp"
                        app:backgroundTint="@color/acolor"
                        app:icon="@drawable/baseline_logout_24"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</androidx.cardview.widget.CardView>