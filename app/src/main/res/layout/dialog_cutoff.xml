<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewTitle"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/scolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtDialogTitle"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfprotextbold"
                android:textSize="20dp"
                android:alpha=".7"
                android:paddingVertical="10dp"
                android:text="Reading"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_below="@id/cardViewTitle"
            android:weightSum="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnXReading"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:backgroundTint="@color/acolor"
                android:text="X Reading"
                app:cornerRadius="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/sfuitextregular"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnZReading"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:backgroundTint="@color/acolor"
                android:text="Z Reading"
                app:cornerRadius="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/sfuitextregular"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNegative"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:backgroundTint="@color/acolor"
                android:text="Cancel"
                app:cornerRadius="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/sfuitextregular"
                />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>